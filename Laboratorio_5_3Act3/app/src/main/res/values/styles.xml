<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#99CC00</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:style/Theme.Holo.Light.DarkActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="buttonStyle">
        <item name="android:background">#33B5E5</item>
        <item name="android:padding">50dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="buttonStyle2">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#33B5E5</item>
    </style>
</resources>
